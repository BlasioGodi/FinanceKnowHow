@model FinanceKnowHow.ViewModels.PaginatedList<FinanceKnowHow.Models.BlogPost>

<nav class ="mb-lg-none mb-md-3 mb-sm-3 mb-xs-3 mb-xxs-3 d-flex justify-content-sm-start justify-content-xs-center justify-content-xxs-center" aria-label="Page navigation">
    <ul class="pagination">
        @if (Model.HasPreviousPage)
        {
            <li class="page-item @(Model.HasPreviousPage ? "" : "disabled")">
                <a class="page-link" asp-route-currentPage="@(Model.CurrentPage - 1)">Previous</a>
            </li>
        }
        @if (Model.TotalPages > 1)
        {
            @for (int i = 1; i <= Model.TotalPages; i++)
            {
                <li class="page-item @(Model.CurrentPage == i ? "active" : "")">
                    <a class="page-link" asp-route-currentPage="@i">@i</a>
                </li>
            }
        }
        @if (Model.HasNextPage)
        {
            <li class="page-item @(Model.HasNextPage ? "" : "disabled")">
                <a class="page-link" asp-route-currentPage="@(Model.CurrentPage + 1)">Next</a>
            </li>
        }
    </ul>
</nav>