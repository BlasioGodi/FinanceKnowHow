@model FinanceKnowHow.ViewModels.PaginatedList<FinanceKnowHow.Models.BlogPost>
<nav>
    <ul class="pagination">
        @if (Model.HasPreviousPage)
        {
            <li class="page-item">
                <a class="page-link" asp-action="SearchResults" asp-route-query="@ViewBag.Query" asp-route-currentPage="@(Model.CurrentPage - 1)">Previous</a>
            </li>
        }
        @if (Model.TotalPages > 1)
        {
            @for (var i = 1; i <= Model.TotalPages; i++)
            {
                <li class="page-item @(i == Model.CurrentPage ? "active" : "")">
                    <a class="page-link" asp-action="SearchResults" asp-route-query="@ViewBag.Query" asp-route-currentPage="@i">@i</a>
                </li>
            }
        }
        @if (Model.HasNextPage)
        {
            <li class="page-item">
                <a class="page-link" asp-action="SearchResults" asp-route-query="@ViewBag.Query" asp-route-currentPage="@(Model.CurrentPage + 1)">Next</a>
            </li>
        }
    </ul>
</nav>
