                                            <a target="_blank" rel="noopener noreferrer" class="nav-link"
                                               aria-current="page" asp-area="" asp-page="" asp-route-title="@trading">@trading</a>
                                        </li>
                                    }
                                }
                            </ul>
                        </div>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link-mobile">
                            Business <span class="nav-link-mob-button" id="nav-link-btn-4" data-corresponding-angle="navlinkAngle4" data-bs-toggle="collapse"
                                           data-bs-target="#collapseBusiness" aria-expanded="false" aria-controls="collapseBusiness">
                                <i class="fa fa-angle-down" id="nav-link-mob-angle-4"></i>
                            </span>
                        </a>
                        <div class="collapse" id="collapseBusiness">
                            <ul class="text-center text-light bg-offcanvas-collapse">
                                @if (Model.Business != null)
                                {
                                    @for (var i = 0; i < Model.Business.Count; i++)
                                    {
                                        var business = Model.Business[i];

                                        <li class="@(i == Model.Business.Count - 1 ? "" : "border-bottom-collapse") mx-3 my-2">
                                            <a target="_blank" rel="noopener noreferrer" class="nav-link"
                                               aria-current="page" asp-area="" asp-page="" asp-route-title="@business">@business</a>
                                        </li>
                                    }
                                }
                            </ul>
                        </div>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link-mobile">
                            Personal Finance <span class="nav-link-mob-button" id="nav-link-btn-5" data-corresponding-angle="navlinkAngle5" data-bs-toggle="collapse"
                                                   data-bs-target="#collapsePersonal" aria-expanded="false" aria-controls="collapsePersonal">
                                <i class="fa fa-angle-down" id="nav-link-mob-angle-5"></i>
                            </span>
                        </a>
                        <div class="collapse" id="collapsePersonal">
                            <ul class="text-center text-light bg-offcanvas-collapse">
                                @if (Model.PersonalFinance != null)
                                {
                                    @for (var i = 0; i < Model.PersonalFinance.Count; i++)
                                    {
                                        var personalFinance = Model.PersonalFinance[i];

                                        <li class="@(i == Model.PersonalFinance.Count - 1 ? "" : "border-bottom-collapse") mx-3 my-2">
                                            <a target="_blank" rel="noopener noreferrer" class="nav-link"
                                               aria-current="page" asp-area="" asp-page="" asp-route-title="@personalFinance">@personalFinance</a>
                                        </li>
                                    }
                                }
                            </ul>
                        </div>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link-mobile" aria-current="page" asp-area="" asp-page="/Archive">Archives</a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link-mobile" aria-current="page" asp-area="" asp-page="/Contact">Contact Us</a>
                    </li>
