    Model.Business = new List<string> { "Entrepreneurship", "Case Studies", "Idea 3", "Idea 4", "Idea 5" };
    Model.PersonalFinance = new List<string> { "Saving", "Budgeting", "Banking" };
    Model.CurrentDateTime = DateTime.Now;

    Model.SocialIcons = new List<string> { "fa-brands fa-facebook", "fa-brands fa-x-twitter", "fa-brands fa-instagram", "fa-brands fa-telegram" };
