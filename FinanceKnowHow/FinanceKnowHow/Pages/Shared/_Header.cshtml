                </div>
                <div class="col-md-6 mb-2 col-lg-6 col-sm-12 text-center text-light">
                    Designed by
                    <strong>WebMania</strong>
                </div>
            </div>
        </div>
    </div>
    <!--Header Icon Style-->
    <style>
        @Html.Raw(ViewData["Social-List-Dark"])
    </style>
</header>

