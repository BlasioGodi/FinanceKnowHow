                        </div>
                    </div>
                </button>
                <div class="collapse navbar-collapse">
                    <ul class="navbar-nav me-auto mb-2 mb-lg-0 ms-auto justify-content-between">
                        <li class="nav-item">
                            <a class="nav-link nav-link-active" aria-current="page" asp-area="" asp-page="/Index">Home</a>
                        </li>
                        <li class="nav-item navbar-collapse-menu">
                            <a class="nav-link nav-link-active">Economics<span><i class="fa fa-angle-down"></i></span></a>
                            <ul>
                                @if (Model.Economics != null)
                                {
                                    @foreach (var economics in Model.Economics)
                                    {
                                        <li><a aria-current="page" asp-area="" asp-page="" asp-route-title="">@economics</a></li>
                                    }
                                }
                            </ul>
                        </li>
                        <li class="nav-item navbar-collapse-menu">
                            <a class="nav-link nav-link-active">Investments<span><i class="fa fa-angle-down"></i></span></a>
                            <ul>
                                @if (Model.Investments != null)
                                {
                                    @foreach (var investment in Model.Investments)
                                    {
                                        <li><a aria-current="page" asp-area="" asp-page="" asp-route-title="">@investment</a></li>
                                    }
                                }
                            </ul>
                        </li>
                        <li class="nav-item navbar-collapse-menu">
                            <a class="nav-link nav-link-active">Trading<span><i class="fa fa-angle-down"></i></span></a>
                            <ul>
                                @if (Model.Trading != null)
                                {
                                    @foreach (var trading in Model.Trading)
                                    {
                                        <li><a aria-current="page" asp-area="" asp-page="" asp-route-title="">@trading</a></li>
                                    }
                                }
                            </ul>
                        </li>
                        <li class="nav-item navbar-collapse-menu">
                            <a class="nav-link nav-link-active">Business<span><i class="fa fa-angle-down"></i></span></a>
                            <ul>
                                @if (Model.Business != null)
                                {
                                    @foreach (var business in Model.Business)
                                    {
                                        <li><a aria-current="page" asp-area="" asp-page="" asp-route-title="">@business</a></li>
                                    }
                                }
                            </ul>
                        </li>
                        <li class="nav-item navbar-collapse-menu">
                            <a class="nav-link nav-link-active">Personal Finance<span><i class="fa fa-angle-down"></i></span></a>
                            <ul>
                                @if (Model.PersonalFinance != null)
                                {
                                    @foreach (var personalFinance in Model.PersonalFinance)
                                    {
                                        <li><a aria-current="page" asp-area="" asp-page="" asp-route-title="">@personalFinance</a></li>
                                    }
                                }
                            </ul>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link nav-link-active" aria-current="page" asp-page="/Archive">Archives</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link nav-link-active" aria-current="page" asp-page="">Contact</a>
                        </li>
                    </ul>
                    <form class="d-flex" role="search">
                        <input class="form-control me-2" type="search" placeholder="Search" aria-label="Search">
                        <button class="btn btn-primary border-2 btn-outline-dark search-btn" type="submit">Search</button>
                    </form>
                </div>
                <a class="brand-logo" aria-current="page" asp-area="" asp-page="/Index">
                    <img src="~/lib/logo/FKHD-40x121.png" class="d-inline-block align-text-center mx-2 navbar-img d-lg-none" alt="FinanceKnowHow Logo" />
                </a>
            </div>
        </nav>
    </div>
    <div class="offcanvas offcanvas-start text-light bg-offcanvas" data-bs-scroll="true" data-bs-backdrop="false" tabindex="-1" id="offcanvasGypsey"
         aria-labelledby="offcanvasGypseyLabel">
        <div class="border-bottom border-custom-black">
        </div>
        <div class="offcanvas-body container d-flex flex-column justify-content-between">
            <nav class="sideMenu-nav">
                <form class="d-flex pb-3" role="search">
                    <input class="form-control me-2" type="search" placeholder="Search" aria-label="Search">
                    <button class="btn btn-primary border-2 btn-outline-dark search-btn" type="submit">Search</button>
                </form>
                <ul class="navbar-nav">
                    <li class="nav-item">
                        <a class="nav-link-mobile" aria-current="page" asp-area="" asp-page="/Index">Home</a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link-mobile">
                            Economics <span class="nav-link-mob-button" id="nav-link-btn-1" data-corresponding-angle="navlinkAngle1" data-bs-toggle="collapse"
                                            data-bs-target="#collapseEconomics" aria-expanded="false" aria-controls="collapseEconomics">
                                <i class="fa fa-angle-down" id="nav-link-mob-angle-1"></i>
                            </span>
                        </a>
                        <div class="collapse" id="collapseEconomics">
                            <ul class="text-center text-light bg-offcanvas-collapse">
                                @if (Model.Economics != null)
                                {
                                    @for (var i = 0; i < Model.Economics.Count; i++)
                                    {
                                        var economics = Model.Economics[i];

                                        <li class="@(i == Model.Economics.Count - 1 ? "" : "border-bottom-collapse") mx-3 my-2">
                                            <a target="_blank" rel="noopener noreferrer" class="nav-link"
                                               aria-current="page" asp-area="" asp-page="" asp-route-title="@economics">@economics</a>
                                        </li>
                                    }
                                }
                            </ul>
                        </div>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link-mobile">
                            Investments <span class="nav-link-mob-button" id="nav-link-btn-2" data-corresponding-angle="navlinkAngle2" data-bs-toggle="collapse"
                                              data-bs-target="#collapseInvestments" aria-expanded="false" aria-controls="collapseInvestments">
                                <i class="fa fa-angle-down" id="nav-link-mob-angle-2"></i>
                            </span>
                        </a>
                        <div class="collapse" id="collapseInvestments">
                            <ul class="text-center text-light bg-offcanvas-collapse">
                                @if (Model.Investments != null)
                                {
                                    @for (var i = 0; i < Model.Investments.Count; i++)
                                    {
                                        var investment = Model.Investments[i];

                                        <li class="@(i == Model.Investments.Count - 1 ? "" : "border-bottom-collapse") mx-3 my-2">
                                            <a target="_blank" rel="noopener noreferrer" class="nav-link"
                                               aria-current="page" asp-area="" asp-page="" asp-route-title="@investment">@investment</a>
                                        </li>
                                    }
                                }
                            </ul>
                        </div>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link-mobile">
                            Trading <span class="nav-link-mob-button" id="nav-link-btn-3" data-corresponding-angle="navlinkAngle3" data-bs-toggle="collapse"
                                          data-bs-target="#collapseTrading" aria-expanded="false" aria-controls="collapseTrading">
                                <i class="fa fa-angle-down" id="nav-link-mob-angle-3"></i>
                            </span>
                        </a>
                        <div class="collapse" id="collapseTrading">
                            <ul class="text-center text-light bg-offcanvas-collapse">
                                @if (Model.Trading != null)
